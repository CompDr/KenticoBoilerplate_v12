@model Models.Examples.ExampleBannersViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for(int i=0; i< Model.BannerNameUrlsList.Count; i++)
        {
            <div class="carousel-item @(i==0 ? "active" : "")">
                <img class="d-block w-100" src="@Url.Content(Model.BannerNameUrlsList[i].BannerUrl)" alt="@Model.BannerNameUrlsList[i].BannerName">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>