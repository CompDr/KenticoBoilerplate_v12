@using Models.InlineEditors
@using Models.Widgets
@model Models.Widgets.SimpleWidgetViewModel

@if (Context.Kentico().PageBuilder().EditMode)
{
    Html.RenderPartial("InlineEditors/_TextEditor", new TextEditorViewModel
    {
        PropertyName = nameof(SimpleWidgetProperties.Text),
        Text = Model.Text
    });
}
else
{
    @Html.Raw(Model.Text);
}
